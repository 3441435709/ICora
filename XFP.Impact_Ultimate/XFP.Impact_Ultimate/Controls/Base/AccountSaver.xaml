<UserControl x:Class="XFP.Impact_Ultimate.Controls.Base.AccountSaver"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XFP.Impact_Ultimate.Controls.Base"
             mc:Ignorable="d" Height="335" Width="620">
    <Grid>
        <TabControl Style="{StaticResource TabControlInLine}">
            <TabItem Header="Default">
                <ListView ItemsSource="{Binding DataList}" Margin="0,0,93,0">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Width="100" Header="名称" DisplayMemberBinding="{Binding Name}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
        </TabControl>
        <Button x:Name="ChooseAccount" Click="ChooseAccount_Click"  Content="确定" HorizontalAlignment="Left" VerticalAlignment="Top" Width="61" Height="26" Margin="549,299,0,0"/>
    </Grid>
</UserControl>
